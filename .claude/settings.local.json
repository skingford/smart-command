{
  "permissions": {
    "allow": [
      "Bash(cargo build:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo fmt:*)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(cargo check:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo run:*)",
      "WebSearch",
      "Bash(tree:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(cargo --version:*)",
      "Bash(rustc:*)",
      "Bash(cargo test:*)",
      "Bash(find:*)",
      "WebFetch(domain:api.github.com)",
      "Bash(claude plugins install:*)",
      "Bash(./target/release/sc:*)",
      "Bash(git stash:*)",
      "Bash(sc:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cargo fmt --check 2>&1 || echo '⚠️ Format check failed. Run: cargo fmt'"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "cargo fmt --check 2>&1 || echo '⚠️ Format check failed. Run: cargo fmt'"
          }
        ]
      }
    ]
  }
}
